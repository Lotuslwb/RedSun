<!--login.wxml-->
<view class="container">
  <view  wx:if="{{hasUserInfo}}" class="userinfo">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text> 
      
  </view>
  <view class="usermotto">
    <canvas class='lockCanvas' canvas-id="lockCanvas" style='width:{{canvasW}}px; height:{{canvasH}}px;'       
    binderror="canvasIdErrorCallback" bindtouchstart='canvasTouchStart' bindtouchmove='canvasTouchMove' bindtouchend='canvasTouchEnd' bindtouchcancel='canvasTouchEnd'  disable-scroll='true'></canvas>
  </view>
</view>
